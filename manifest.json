{
  "manifest_version" : 2,
  "name" : "Hello World!",
  "description" : "This is my first Chrome Extension",
  "version" : "1.0.0",

  "browser_action" : {
    "default_icon" : "./icon.png",
    "default_popup" : "popup.html"
  },

  "commands" : {
    "_execute_browser_action" : {
      "suggested_key" : {
        "default" : "Ctrl+Shift+F",
        "mac" : "MacCtrl+Shift+F"
      }
    }
  },

  "permissions" : [
    "tabs",
    "<all_urls>"
  ]
}